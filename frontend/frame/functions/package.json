{
  "name": "functions",
  "description": "Cloud Functions for Firebase",
  "scripts": {
    "serve": "firebase emulators:start --only functions",
    "shell": "firebase functions:shell",
    "start": "npm run shell",
    "deploy": "firebase deploy --only functions",
    "logs": "firebase functions:log",
    "lint": "eslint -c .eslintrc.js ../",
    "gitadd": "npm run lint && npm run csslint && npm run licrep && npm run ugly && git add ../ && git status",
    "licrep": "license-report --config license-report-config.json > app/public/license.json",
    "ugly": "uglifyjs ../client/js/*.js --compress --mangle -o app/public/client.min.js",
    "uglybeauty": "uglifyjs ../client/js/*.js --beautify -o app/public/client.min.js",
    "csslint": "npx stylelint --config .stylelintrc.json ../client/scss/**/*"
  },
  "engines": {
    "node": "14"
  },
  "main": "index.js",
  "dependencies": {
    "compression": "^1.7.4",
    "express": "^4.17.1",
    "firebase-admin": "^9.8.0",
    "firebase-functions": "^3.14.1",
    "helmet": "^4.6.0",
    "path": "^0.12.7",
    "pug": "^3.0.2"
  },
  "devDependencies": {
    "eslint": "^7.2.0",
    "eslint-config-airbnb-base": "^14.2.1",
    "eslint-plugin-import": "^2.22.1",
    "firebase-functions-test": "^0.2.0",
    "stylelint": "^14.0.1",
    "stylelint-config-sass-guidelines": "^9.0.1",
    "uglify-js": "^3.14.3"
  },
  "private": true
}
